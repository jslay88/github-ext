{
  "manifest_version": 3,
  "name": "GitHub PR Sidebar Extension",
  "version": "1.0.0",
  "description": "Injects a section into the GitHub pull request sidebar.",
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["dist/content.js"],
      "type": "module"
    }
  ]
}
